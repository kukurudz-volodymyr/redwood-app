datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstName String
  lastName  String
  avatar    String
  posts     Post[]
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  postTag   PostTag[]
}

model Tag {
  id      Int       @id @default(autoincrement())
  name    String
  postTag PostTag[]
}

model PostTag {
  id     Int  @id @default(autoincrement())
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int
  post   Post @relation(fields: [postId], references: [id])
  postId Int

  @@unique([tagId, postId])
}
